
# set this once on login
if [ -z "$PATH_DEFAULT" ]; then
    export PATH_DEFAULT=$PATH
fi

if [ -z "$1" ]; then
    echo "anaconda3 enabled"
    # added by Anaconda3 4.3.1 installer
    export PATH="$HOME/.local/anaconda3/bin:$PATH_DEFAULT"
elif [ "py2" = "$1" ]; then
    echo "anaconda2 enabled"
    # added by Anaconda2 installer
    export PATH="$HOME/.local/anaconda2/bin:$PATH_DEFAULT"
fi

# unset python path if it exists
unset PYTHONPATH
